pipeline {
    agent any

    stages {

	    stage("Node install"){
	    	steps {
	    		sh "apt-get update && apt-get -y install curl"
	    		sh "curl -sL https://deb.nodesource.com/setup_6.x | bash - \
    				&& apt-get -y install python build-essential nodejs"
	    		sh "cd server && npm install"
	    	}

	    }

	   /* Uncommented until we actually have some tests 
	   stage("Test") {
	    	steps {
	    		sh "./main/tests.js"
	    	}
	    } 
	    */
}

}